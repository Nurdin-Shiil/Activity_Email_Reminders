        <!-- Email Template: Lead Upload Reminder -->
        <record id="email_template_lead_upload_reminder" model="mail.template">
            <field name="name">Lead Upload Reminder</field>
            <field name="model_id" ref="sales_team.model_crm_team" />
            <field name="subject">Reminder: Please Upload Your Leads - {{ object.name or '' }}</field>
            <field name="email_to">{{ ','.join(object.member_ids.mapped('email')) }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hello <t t-out="object.name or ''" /> Team,</p>
                    <p>This is a friendly reminder to upload your latest leads into the CRM.</p>
                    <p>Please ensure all leads from this week are entered before the deadline.</p>
                </div>
                <br />
                <div>
                    <a t-attf-href="/web#model=crm.lead&amp;view_type=list"
                        style="padding: 5px 10px; color: #FFFFFF; text-decoration: none;
                               background-color: #875A7B; border: 1px solid #875A7B; border-radius: 3px">
                        Upload Leads Now
                    </a>
                </div>
            </field>
