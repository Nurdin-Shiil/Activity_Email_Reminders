<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mail_template_activity_reminder_2_days" model="mail.template">
            <field name="name">Activity Reminder: 2 Days Before Deadline</field>
            <field name="model_id" ref="mail.model_mail_activity" />
            <field name="subject">Reminder to review your activity: {{ object.res_name or '' }}</field>
            <field name="email_to">{{ object.user_id.email or '' }}</field>
            <field name="body_html" type="html">
                <div> Dear <t t-out="object.user_id.name or ''" />, <br /><br /> I hope this email
                    finds you well. Just a quick reminder that the task <t
                        t-out="object.res_name or ''" /> is due in 2 days, on <t
                        t-out="object.datetime_deadline or ''" />. <br /><br /> ðŸ”¹ Activity Details: <br /><br />
                    Task: <t t-out="object.res_name or ''" /> <br /> Assigned To: <t
                        t-out="object.user_id.partner_id.name or ''" /> <br /> Due Date: <t
                        t-out="object.datetime_deadline or ''" /><br />
                </div>
                <br />
                <div>
                    <a t-attf-href="/odoo/{{ object.res_model }}/{{ object.res_id }}"
                        style="padding: 5px 10px; color: #FFFFFF; text-decoration: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius: 3px">
                        View Activity
                    </a>
                </div>
            </field>
            <field name="auto_delete" eval="True" />
        </record>

