<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mail_activity_form_inherit" model="ir.ui.view">
        <field name="name">mail.activity.form.inherit</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup" />
        <field name="arch" type="xml">
            <field name="date_deadline" position="replace">
                <field name="datetime_deadline" widget="datetime" readonly="0" />

            </field>
        </field>
    </record>
    <record id="view_mail_activity_schedule_form_inherit" model="ir.ui.view">
        <field name="name">mail.activity.schedule.form.inherit</field>
        <field name="model">mail.activity.schedule</field>
        <field name="inherit_id" ref="mail.mail_activity_schedule_view_form" />
        <field name="arch" type="xml">
            <field name="date_deadline" position="replace">
                <field name="datetime_deadline" widget="datetime" readonly="0" />

            </field>
        </field>
    </record>
</odoo>